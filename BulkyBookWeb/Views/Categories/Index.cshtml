@using BulkyBookWeb.Models
@* @model List<Category> *@
@model IEnumerable<Category>

@{
	ViewData["Title"] = "Index";
}

<partial name="_Notification"/>

<div class="container p-3">
	<div class="row pt-4 mb-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Categories" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create new category
			</a>
		</div>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th>
					Links
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.Name
					</td>
					<td>
						@item.DisplayOrder
					</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
								<i class="bi bi-pencil-fill"></i>Edit
							</a>
							@* <a asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" class="mx-3 btn btn-danger">
								<i class="bi bi-x"></i>Delete
							</a> *@

							<a asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id" class="mx-3 btn btn-danger">
								<i class="bi bi-x"></i>Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>